{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}

	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.summary }}</p>
			<a href="{{ path("category_show", { categoryName: program.category.name }) }}">
				<p>Catégorie :
					{{ program.category.name }}</p>
			</a>
			<h3 class="mt-0">{{ season.description }}</h3>
			{% for episode in season.episodes %}
				<a href="{{ path("program_episode_show", { program_slug: program.slug, season: season.id, episode_slug: episode.slug }) }}">
					<h6>Episode {{ episode.number }} - {{ episode.title }}</h6>
				</a>
				<p>{{ episode.synopsis }}</p>
			{% else %}
				<p>
					Il n'y a actuellement aucun épisode disponible pour cette saison.
				</p>
			{% endfor %}
		</div>
	</div>

	<a href="{{ path("program_show", { slug: program.slug }) }}">
		Retour à la liste des saisons
	</a>

{% endblock %}
